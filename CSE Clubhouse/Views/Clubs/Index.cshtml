@model IEnumerable<CSE_Clubhouse.Models.Club>

@{
    ViewData["Title"] = "Our Clubs";
}
@using Microsoft.AspNetCore.Identity;

<h1>@ViewData["Title"]</h1>
<p>
    @if (User.IsInRole("Admin"))
    {
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    }
</p>
<table class="table table-hover">
    <tbody>
        @foreach (var item in Model) 
        {
            <tr class="table-active">
            <td class="col-6">
                 <a asp-action="Details" asp-route-id="@item.Id" class="nav-link">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td class="col-4">
                @Html.DisplayFor(modelItem => item.Tagline)
            </td>
            <td>
                @if (User.IsInRole("Admin") || User.IsInRole("ClubModerator"))
                {
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                }
                @if (User.IsInRole("Admin"))
                {    
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> 
                }
            </td>
        </tr>
}
    </tbody>
</table>
